/* miniprogram/pages/location/location.wxss */
page {
  padding-top: 100rpx;
}

.indexes {
  position: relative;
}

.indexBar {
  position: fixed;
  right: 0px;
  bottom: 0px;
  padding: 20rpx 20rpx 20rpx 60rpx;
  display: flex;
  align-items: center;
}

.indexBar .indexBar-box {
  width: 40rpx;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.indexBar-item {
  flex: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #888;
}

movable-view.indexBar-item {
  width: 40rpx;
  height: 40rpx;
  z-index: 9;
  position: relative;
}

movable-view.indexBar-item::before {
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 20rpx;
  width: 4rpx;
  background-color: #f37b1d;
}

.indexToast {
  position: fixed;
  top: 0;
  right: 80rpx;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin: auto;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 48rpx;
}
.header{
  margin-top: 30rpx;
  padding: 30rpx 10rpx;
  color: #cdcdcd;
  display: flex;
  background-color: #fff;
}
.header .btn {
  border: 2rpx solid #fff;
  flex: 1;
  border-radius: 10%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header .btn1{
  padding-right: 30rpx;
}

.color{
  color: #f17c0e;
}
.item{
  margin-top: 10rpx;
  padding:0 60rpx;
  border: 2rpx solid #fff;
  border-radius: 20rpx;
  background-color: #fff;
}
.item .top,.item .bottom{
  margin-top: 20rpx;
  display: flex;
}
.item .top .long,.item .bottom .long{
  position: absolute;
  padding-right: 60rpx;
  right: 0;
}
.middle{
  display: flex;
}
.middle .detail{
  position: absolute;
  padding-right: 60rpx;
  right: 0;
}
.item .button {
  margin: 30rpx 0;
  height: 60rpx;
  border: 1rpx solid #f17c01;
  border-radius: 10rpx;
  background-color: #f17c01;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
.btn .content .icon {
  width: 60rpx;
  height: 60rpx;
}
.btn .content .icon image{
  width: 100%;
  height: 100%;
}
.header .btn .content,.bottom{
  display: flex;
  justify-content: center;
  align-items: center;  
}
.bottom .long{
  width: 106rpx;
  height: 88rpx;
}
.bottom .long image{
  margin-top: 50rpx;
  margin-right: 50rpx;
  width: 100%;
  height: 100%;
}
